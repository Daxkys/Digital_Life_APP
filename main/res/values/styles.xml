<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->

    <!-- TODO: change to Theme.MaterialComponents.DayNight -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/accent</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/accent</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/primary</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <item name="materialAlertDialogTheme">@style/Athena.MaterialAlertDialog</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Athena.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
    </style>

    <!-- font style -->
